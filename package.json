{
  "name": "whoop-cli",
  "version": "0.1.2",
  "description": "Simple WHOOP CLI for auth and daily stats",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "whoop": "bun run index.ts",
    "auth": "bun run index.ts auth",
    "stats": "bun run index.ts stats",
    "build:binary": "bun build --compile --no-compile-autoload-dotenv ./index.ts --outfile ./dist/whoop",
    "release": "bash ./scripts/release.sh",
    "release:patch": "bash ./scripts/release.sh patch",
    "release:minor": "bash ./scripts/release.sh minor",
    "release:major": "bash ./scripts/release.sh major",
    "typecheck": "tsc --noEmit"
  }
}
